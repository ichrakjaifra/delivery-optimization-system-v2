<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Création de la table customers -->
    <changeSet id="v2.0-1" author="votre_nom">
        <comment>Création de la table customers pour stocker les informations clients</comment>

        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="preferred_time_slot" type="VARCHAR(20)"/>
        </createTable>

        <rollback>
            <dropTable tableName="customers"/>
        </rollback>
    </changeSet>

    <!-- Création de la table delivery_history -->
    <changeSet id="v2.0-2" author="votre_nom">
        <comment>Création de la table delivery_history pour le suivi des livraisons</comment>

        <createTable tableName="delivery_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_customer"
                             referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="delivery_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_delivery"
                             referencedTableName="deliveries" referencedColumnNames="id"/>
            </column>
            <column name="tour_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_delivery_history_tour"
                             referencedTableName="tours" referencedColumnNames="id"/>
            </column>
            <column name="delivery_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="planned_time" type="TIMESTAMP"/>
            <column name="actual_time" type="TIMESTAMP"/>
            <column name="delay_minutes" type="INTEGER"/>
            <column name="day_of_week" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="VARCHAR(500)"/>
        </createTable>

        <rollback>
            <dropTable tableName="delivery_history"/>
        </rollback>
    </changeSet>


    <changeSet id="v2.0-3" author="your_name">
        <comment>Add status column to tours table</comment>

        <addColumn tableName="tours">
            <column name="status" type="VARCHAR(15)" defaultValue="PLANNED">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="tours" columnName="status"/>
        </rollback>
    </changeSet>

</databaseChangeLog>